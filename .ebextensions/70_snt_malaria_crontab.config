files:
  "/etc/cron.d/snt_recreate_demo_account":
    mode: "000644"
    owner: root
    group: root
    content: |
        MAILTO=""
        PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin
        0 2 * * * root /var/app/current/plugins/snt_malaria/scripts/recreate_demo_account.sh

commands:
  rm_old_cron:
    command: "rm *.bak"
    cwd: "/etc/cron.d"
    ignoreErrors: true
